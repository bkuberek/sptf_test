{% extends '::base.html.twig' %}
{% block title %}{{ movie.title }} ({{ movie.year }}) - IMDB Toplist - powered by Spotify{% endblock %}
{% block content %}
<section class="movies">
    <article class="movie">
        {% if movie.imageLarge %}
            <img src="/uploads/movie/full/{{ movie.imageLarge }}" alt="Movie cover" />
        {% endif %}
        <h1>{{ movie.title }} <span class="year">({{ movie.year }})</span></h1>
        {% if movie.originalTitle %}
        <h2>Original title: {{ movie.originalTitle }}</h2>
        {% endif %}
        {% if movie.director %}
        <p class="director">Directed by: {{ movie.director }}</p>
        {% endif %}
        <div class="ratings">
            <p class="rating"><b>Rated:</b> {{ movie.rating }}</p>
            <p class="votes"><b>Votes:</b> {{ movie.votes }}</p>
        </div>
        {% if movie.url %}
        <a class="url" target="_blank" href="{{ movie.url }}">View on IMDB</a>
        {% endif %}
        {% if movie.description %}
        <p class="description">{{ movie.description }}</p>
        {% endif %}
    </article>
</section>
{% endblock %}
